<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives">
    <x:Boolean x:Key="UseSystemFocusVisuals">True</x:Boolean>

    <FontFamily x:Key="TextFontFamily">XamlAutoFontFamily</FontFamily>
    <x:Double x:Key="TextFontSize">12</x:Double>
    
    <x:Double x:Key="WindowCaptionFontSize">14</x:Double>
    
    <FontFamily x:Key="ContentControlFontFamily">XamlAutoFontFamily</FontFamily>
    <x:Double x:Key="ControlContentFontSize">14</x:Double>
    <CornerRadius x:Key="ContentControlCornerRadius">4</CornerRadius>

    <x:Double x:Key="ButtonSmallFontSize">12</x:Double>
    <x:Double x:Key="ButtonLargeFontSize">16</x:Double>
</ResourceDictionary>
