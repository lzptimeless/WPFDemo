<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DefaultTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource TextBlockFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource TextBlockFontSize}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBlockForeground}"/>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlockStyle}"/>

    <!--Custom styles-->
    <Style x:Key="WindowCaptionTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource WindowCaptionFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource WindowCaptionFontSize}"/>
        <Setter Property="Foreground" Value="{ThemeResource WindowCaptionForeground}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>
