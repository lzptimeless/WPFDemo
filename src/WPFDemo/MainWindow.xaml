<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        xmlns:i18n="clr-namespace:WPFDemo.I18n.Tools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="语言：" VerticalAlignment="Center"/>
            <ComboBox x:Name="LanguageSelection" SelectedIndex="0" SelectionChanged="LanguageSelection_SelectionChanged">
                <ComboBoxItem>en</ComboBoxItem>
                <ComboBoxItem>cn</ComboBoxItem>
            </ComboBox>
            <Button x:Name="AddHoursButton" Click="AddHoursButton_Click">增加时间</Button>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock i18n:Text.Key="desc2">
                <Run i18n:Text.ParamName="1" Text="00"/>
                <Run i18n:Text.ParamName="0" Text="{Binding Hours, Mode=OneWay}"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
